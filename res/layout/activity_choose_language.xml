<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tektalk.finalcode.ChooseLanguage">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="53dp"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="310dp"
        android:layout_marginTop="243dp"
        app:srcCompat="@drawable/ic_baseline_keyboard_arrow_down_24" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srcCompat="@drawable/background" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="314dp"
        android:layout_height="61dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="47dp"
        android:layout_marginBottom="433dp"
        android:background="#DFE4F3"
        android:filterTouchesWhenObscured="false"
        android:fitsSystemWindows="false" />

    <Button
        android:id="@+id/button2"
        android:layout_width="136dp"
        android:layout_height="66dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="142dp"
        android:layout_marginEnd="133dp"
        android:layout_marginBottom="324dp"
        android:text="CHOOSE" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="314dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="52dp"
        android:layout_marginEnd="45dp"
        android:layout_marginBottom="503dp"
        android:gravity="center"
        android:text="Translate to:"
        android:textColor="#2196F3"
        android:textStyle="bold"
        android:textSize="@dimen/margin_medium"/>




</RelativeLayout>